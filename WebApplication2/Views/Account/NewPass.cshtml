@model AppUserModel
@{
    ViewData["Title"] = "New Password";
}
<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12 text-center">
                <h2 class="breadcrumb-title">New Password</h2>

            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->
<!-- login area start -->
<div class="login-register-area pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4>login</h4>
                        </a>

                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <form asp-action="UpdateNewPassword" asp-controller="Account" method="post">
                                        <input type="hidden" name="token" value="@ViewBag.Token" />
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input asp-for="Email" readonly value="@ViewBag.Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger" />
                                        </div>
                                        <div class="form-group">
                                            <label>Password</label>
                                            <input asp-for="PasswordHash" class="form-control" />
                                            <span asp-validation-for="PasswordHash" class="text-danger" />
                                        </div>

                                        <button class="create-btn">Change Password</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .create-btn {
        display: inline-block;
        padding: 6px 12px;
        font-size: 14px;
        font-weight: bold;
        color: white; /* Chữ màu trắng */
        background-color: #007bff; /* Nền xanh dương */
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        transition: background-color 0.2s;
        margin-top: 20px;
    }

        .create-btn:hover {
            background-color: #0056b3; /* Màu xanh đậm hơn khi hover */
        }

</style>
<!-- login area end -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



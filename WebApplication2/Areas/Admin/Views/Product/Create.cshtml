@model ProductModel
@{
    ViewData["title"] = "Create Product";
}
<h4 style="margin:15px">Create Product</h4>
<div class="col-md-9" style="margin:15px">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Ram</label>
            <input asp-for="Ram" class="form-control" />
            <span asp-validation-for="Ram" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Ssd</label>
            <input asp-for="Ssd" class="form-control" />
            <span asp-validation-for="Ssd" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Warranty</label>
            <input asp-for="Warranty" class="form-control" />
            <span asp-validation-for="Warranty" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" ></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option>--Choose a category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Brand</label>
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                <option>--Choose a brand</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Image</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger" />
            <img id="imgpreview" class="pt-2"  />
        </div>
        <div class="form-group">
            <button class="create-btn">Create</button>
        </div>
    </form>
    <a asp-action="Index">Back to list product</a>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        $("#ImageUpload").change(function(){
            readURL(this);
        })
    </script>
    <script>
        CKEDITOR.replace( 'Description' );
    </script>
    
}

<style>
    .create-btn {
        display: inline-block;
        padding: 6px 12px;
        font-size: 14px;
        font-weight: bold;
        color: white; /* Chữ màu trắng */
        background-color: #007bff; /* Nền xanh dương */
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        transition: background-color 0.2s;
        margin-top:20px;
    }

        .create-btn:hover {
            background-color: #0056b3; /* Màu xanh đậm hơn khi hover */
        }

</style>

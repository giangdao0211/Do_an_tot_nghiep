@model AppUserModel
@{
    ViewData["title"] = "Edit User";
}
<h4 style="margin:15px">Edit User</h4>
<div class="col-md-9" style="margin:15px">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>User Name</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input asp-for="PhoneNumber" required class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="PasswordHash" readonly required class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Role</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="create-btn">Update</button>
        </div>
    </form>
    <a asp-action="Index">Back to list user</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

<style>
    .create-btn {
        display: inline-block;
        padding: 6px 12px;
        font-size: 14px;
        font-weight: bold;
        color: white; /* Chữ màu trắng */
        background-color: #007bff; /* Nền xanh dương */
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        transition: background-color 0.2s;
        margin-top: 20px;
    }

        .create-btn:hover {
            background-color: #0056b3; /* Màu xanh đậm hơn khi hover */
        }

</style>



